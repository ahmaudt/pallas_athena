<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Preferred name</th>
      <th>Last name</th>
      <th>Major</th>
      <th>Advisor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisor.students.each do |student| %>
      <tr>
        <td><%= student.preferred_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.major_id %></td>
        <td><%= student.advisor_id %></td>
        <td><%= button_to 'Show', { action: "show", id: "#{student.id}" }, method: :get %></td>
        <td><%= button_to 'Edit', edit_student_path(student), method: :get %></td>
        <td><%= button_to 'Destroy', { action: "destroy", id:"#{student.id}" }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

